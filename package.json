    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.1",
    "express": "~4.16.1",
    "mongoose": "^6.6.7",
    "morgan": "~1.9.1",
    "node-fetch": "2",
    "nodemon": "^2.0.20",
    "uid2": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3"
  }
}
