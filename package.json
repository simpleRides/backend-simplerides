{
  "name": "faceup-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "test": "yarn jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js, json}": "prettier --write --ignore-unknown"
